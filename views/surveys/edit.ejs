<% include ../partials/header.ejs %>

<!-- Render the question creation form-->
	<main class="container">
			<h1>Create the Question</h1>
		<div class="col-sm-4">
			<form method="post">
				<fieldset class="form-group">
					<label for="name">Name: *</label>
					<input name="email" type="name" class="form-control" required autofocus />
				</fieldset>
				<fieldset class="form-group">
					<label for="template">template: *</label></br>
					<input type= "radio" name ="template" value="checkbox">&nbsp&nbsp CheckBox</br>
					<input type= "radio" name ="template" value="bool">&nbsp&nbspTrue or False
				</fieldset>
				<fieldset class="form-group">
					<label for="ActiveDate">Active Date: *</label>
					<input name="ActiveDate" type="Date" class="form-control" required />untill:</br>
					<input name="expireDate" type="Date" class="form-control" required />
				</fieldset>
				<fieldset class="form-group">
					<label for="noOfQuestions">Number of Questions *</label></br>
					<select name="noOfQuestions">
						<option value="5"> 5</option>
						<option value="10"> 10</option>
						<option value="15"> 15</option>
					</select>
				</fieldset>
				<fieldset class="form-group text-right">
					<input type="submit" class="btn btn-success" value="Submit"/>
				</fieldset>
			</form
		</div>
	</main>

